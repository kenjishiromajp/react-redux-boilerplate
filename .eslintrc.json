{
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  "settings": {
    "import/external-module-folders": [
      "node_modules",
      "src"
    ]
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "__PROD__": true
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}
